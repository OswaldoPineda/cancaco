          <div class="p-2 d-flex flex-wrap justify-content-center">
            <div class="w-100 mb-3 d-flex justify-content-center">
              <%= image_tag( 'shopping_bag.svg', size: "150x150", class: "text-secondary" ) %>
            </div>
            <h4 class="text-center">Compras</h4>
          </div>
        <% end %>
      </div>

      <div class="px-0 m-2 col-12 col-md-5 col-lg-3 col-xl-2 border border-dark rounded">
        <%= link_to '/sales', class: "text-decoration-none text-secondary" do %>
          <div class="p-2 d-flex flex-wrap justify-content-center">
            <div class="w-100 mb-3 d-flex justify-content-center">
              <%= image_tag( 'money_circle.svg', size: "150x150", class: "text-secondary" ) %>
            </div>
            <h4 class="text-center">Historial ventas</h4>
          </div>
        <% end %>
      </div>
