<div class="carousel-section">
  <div class="row">
    <div class="col">
      <h2 class="title"><%= category.title %></h2>
      <%= link_to "Ver mÃ¡s",
                  category_searches_path(title: category.title),
                  class: "link",
                  "data-turbolinks": false %>
    </div>
  </div>
  <%= tag.div class: "carousel-track",
              name: category.title,
              id: "carr-#{category.id}",
