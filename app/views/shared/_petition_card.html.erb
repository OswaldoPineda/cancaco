<% company_info = product.company %>
<% user_info = company_info.user %>
<% measure = product.measure %>
<div class="col-12 col-md-6 col-lg-6 col-xl-4 mb-5">
  <div class="card border-secondary">
    <div class="card-body">
      <h5 class="card-title"><%= user_info.full_name.titleize %></h5>
      <h6 class="card-subtitle mb-2 text-muted mb-4"><%= company_info.name %></h6>
      <p class="card-text font-italic text-truncate"><%= product.title %></p>
      <div class="my-3 card-description">
        <p class="card-text clampjs"><%= product.description %></p>
      </div>
      <p class="card-text"><%= product.quantity %> <%= measure.name %></p>
      <div class="card-deadline">Vence el : <%= product.deadline %> </div>
      <div class="d-flex justify-content-end mt-3">
        <a href="#<%= product.id %>" class="card-link">Responder solicitud</a>
      </div>
    </div>
  </div>
</div>
