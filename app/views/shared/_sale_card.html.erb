<% company_info = product.company %>
<% user_info = company_info.user %>
<div class="col-12 col-md-6 col-lg-6 col-xl-4 mb-5">
  <div class="card border-secondary">
    <%= image_tag 'https://placeimg.com/400/200/arch/6',
                  class: 'card-img-top sale-image',
                  alt: 'Imagen del producto' %>
    <div class="card-body">
      <h5 class="card-title"><%= product.title.capitalize %></h5>
      <div class="d-flex justify-content-end">
        <div class="d-flex flex-column">
          <h3>$<%= product.price %></h3>
          <p class="card-text text-muted"><%= product.quantity %></p>
        </div>
      </div>
      <div class="d-flex justify-content-between mt-2">
        <p class="mb-0">Vendido por <%= company_info.name %></p>
        <%= link_to '' do %>
          <%= image_tag 'cart-black.svg', alt: 'Icono de compra', size: '28' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
