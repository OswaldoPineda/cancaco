<div class="d-flex flex-column col-12">
  <div class="d-flex flex-column align-items-center justify-content-around h-50 mb-5">
    <% @actual_company = company_recipient(current_user, @conversation) %>
    <span class="profile-photo"> <%= profile_photo(@actual_company.user, '120x120') %> </span>
    <h5 class="name text-center mt-3 mb-0"><%= @actual_company.user.full_name.titleize %></h5>
    <small class="text-muted text-center"><%= @actual_company.name %></small>
  </div>
  <div class="d-flex flex-column align-items-center justify-content-around h-50">
    <h4>Opiniones</h4>
    <!-- The variable "stars" must be calculated automatically,
  depending on the ratings obtained by the seller -->
    <% stars = 3.1 %>
    <p class="opinions font-weight-bold"><%= stars.round(1) %></p>
    <div class="text-right">
      <div class="row">
        <% stars.to_i.times do %>
        <%= image_tag('full star.svg', size: '40x40', class: 'px-1') %>
        <% end %>

        <%= image_tag('half star.svg', size: '40x40', class: 'px-1') if stars - stars.to_i != 0 %>

        <% (5 - stars).to_i.times do %>
        <%= image_tag('empty star.svg', size: '40x40', class: 'px-1') %>
        <% end %>
      </div>
      <small class="text-muted">50 opiniones</small>
    </div>
  </div>
</div>
