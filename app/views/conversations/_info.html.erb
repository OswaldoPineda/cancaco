<div class="d-flex flex-column align-items-center justify-content-around h-50 border-bottom">
  <%= profile_photo(current_user, '120x120') %>
  <% @actual_company = company_recipient(current_user, @conversation) %>

  <h3 class="text-center"><%= @actual_company.user.full_name.titleize %></h3>
  <h5><%= @actual_company.name %></h5>
</div>
<div class="d-flex flex-column align-items-center justify-content-around h-50 border-top py-3">
  <h3>Opiniones</h3>
  <!-- The variable "stars" must be calculated automatically,
  depending on the ratings obtained by the seller -->
  <% stars = 4.1 %>
  <h1><%= stars.round(1) %></h1>
  <div class="text-right">
    <div class="row">
      <% stars.to_i.times do %>
        <%= image_tag('full star.svg', size: '30x30') %>
      <% end %>

      <%= image_tag('half star.svg', size: '30x30') if stars - stars.to_i != 0 %>

      <% (5 - stars).to_i.times do %>
        <%= image_tag('empty star.svg', size: '30x30') %>
      <% end %>
    </div>
    <p>50 opiniones</p>
  </div>
</div>
