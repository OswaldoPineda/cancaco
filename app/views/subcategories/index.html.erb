<div class="container-fluid">
  <div class="d-flex justify-content-center">
    <div class="row rounded justify-content-center border container-subcategories pb-3 mb-4 col-lg-11">
      <div class="col-12 text-center">
        <h1 class="m-4 main-title">Elige una subcategor√≠a</h1>
      </div>
      <div class="d-flex flex-wrap col-12 justify-content-around mb-5">
        <div class="d-flex justify-content-center col-lg-8 mb-3">
          <div class="row justify-content-center category border">
            <div class="d-flex col-12 justify-content-center align-items-center">
              <span class="m-2 text-center text-danger"><%= load_image(@title) %></span>
            </div>
            <div class="d-flex justify-content-center align-items-center col-12">
              <h3 class="text-center category-title"><%= @title %></h3>
            </div>
          </div>
        </div>
        <div class="col-lg-4 text-lg-left text-center subcategories-list">
            <% @subcategories.each do |subcategory| %>
              <ul>
                <li>
                  <%= link_to subcategory.title, petition_or_sale_form(category: @category,
                                                                       subcategory: subcategory) %>
                <li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
