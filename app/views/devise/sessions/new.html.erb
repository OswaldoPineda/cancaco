<div class="container col-11 col-md-8 col-lg-5 bg-light border rounded px-3 px-md-5 pb-5 pt-3 mt-3 mt-md-5 text-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="my-1 d-flex justify-content-center">
      <%= link_to root_path do %>
        <%= image_tag 'canaco-logo.png', size: '160x110' %>
      <% end %>
    </div>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    <div class="d-flex">
      <%= f.label :password %>
      <%= link_to "¿Olvidaste tu contraseña?",
                  new_password_path(resource_name),
                  class: "ml-auto d-none d-md-block" %><br>
    </div>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    <%= link_to "¿Olvidaste tu contraseña?",
                new_password_path(resource_name),
                class: "ml-auto d-block d-md-none" %><br>
    <%= f.submit "Iniciar sesión", class: "btn btn-block primary-button" %>
    <p class="my-3 text-center text-lg-left">Al continuar aceptas las condiciones de uso y el aviso de privacidad de CANACO.</p>
    <% if devise_mapping.rememberable? %>
      <div class="field text-center text-md-left">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-1 col-md-3 px-0">
        <hr>
      </div>
      <div class="col-10 col-md-6 text-center">
        <small>¿Eres nuevo en CANACO?</small>
      </div>
      <div class="col-1 col-md-3">
        <hr>
      </div>
    </div>
    <%= link_to "Crear tu cuenta", new_registration_path(resource_name), class: "btn btn-block primary-button" %><br>
    <div class="text-center">
      <%= link_to "Reenviar correo confirmación de cuenta", new_confirmation_path(resource_name) %>
    </div>
  <% end %>
</div>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 border-top border-dark">
      <div class="row mt-3 justify-content-around">
        <a href="#">Condiciones de uso</a>
        <a href="#">Aviso de privacidad</a>
        <a href="#">Ayuda</a>
      </div>
      <div class="row mt-3">
        <div class="col">
          <p class="text-center font-weight-light">&copy; 1990-2019, CANACO o afiliados. Todos los derechos reservados.</p>
        </div>
      </div>
    </div>
  </div>
</div>
