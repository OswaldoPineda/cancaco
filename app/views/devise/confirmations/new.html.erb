<div class="container col-10 col-md-8 col-lg-5 bg-light border rounded px-5 pb-5 pt-3">
  <div class="my-1 d-flex justify-content-center">
    <%= image_tag 'canaco-logo.jpg', size: '120x110' %>
  </div>
  <h3 class="col-12 text-center my-3">Reenviar confirmación de cuenta</h3>
  <%= form_for(resource,
               as: resource_name,
               url: confirmation_path(resource_name),
               html: { class: "d-flex flex-column align-items-center", method: :post }) do |f| %>
    <% @error_messages = resource.errors.messages %>

    <div class="field w-100">
      <%= f.label :email %><br />
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        value: (
                          resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email
                        ),
                        class: "form-control" %>
      <div class="invalid-feedback">
        <%= invalid_feedback_message(messages: @error_messages, field: :email) %>
      </div>
    </div>

    <br />
    <div class="actions w-100">
      <%= f.submit "Reenviar confirmación", class: "btn btn-block btn-secondary" %>
    </div>
    <div class="row justify-content-between w-100">
      <%= link_to "Iniciar Sesión", new_session_path(resource_name) %>
      <%= link_to "Regístrate", new_registration_path(resource_name) %>
    </div>
  <% end %>
</div>

