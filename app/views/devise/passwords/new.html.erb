<div class="container forgot-password-container col-11 col-md-8 col-lg-5 bg-light border rounded px-3 px-md-5 pb-5 pt-3 mt-3 mt-md-5 text-form">
  <% @error_messages = resource.errors.messages %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="my-1 d-flex justify-content-center">
      <%= link_to root_path do %>
        <%= image_tag 'canaco-logo.png', size: '160x110' %>
      <% end %>
    </div>
    <h3 class="subtitle">Ayuda con la contraseña</h3>
    <div class="text-left text-muted">
      <p>
        Escribe tu dirección de correo electrónico asociado a tu cuenta de CANACO.<br>
        Te enviaremos las instrucciones para restaturar tu contraseña.
      </p>
    </div>
    <div class="field pb-5">
      <%= f.label "Dirección de correo electrónico" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      <div class="invalid-feedback">
        <%= invalid_feedback_message(messages: @error_messages, field: :email) %>
      </div>
    </div>
    <%= f.submit "Enviar correo", class: "btn btn-block primary-button" %>
    <div class="row signup-signin-links d-flex justify-content-between mx-1 py-2">
      <%= link_to "Iniciar sesión", new_session_path(resource_name) %>
      <%= link_to "Registrarse", new_registration_path(resource_name) %>
    </div>
  <% end %>
</div>

